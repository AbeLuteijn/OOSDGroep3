<Page x:Class="SmartUp.WPF.View.AddCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartUp.WPF.View"
        mc:Ignorable="d"
        Title="AddCourse"
        d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}">
    <Grid Background="#E2E2E2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Vak Toevoegen" FontSize="40" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Border Grid.Row="0" BorderThickness="1" BorderBrush="#4e4e4e" VerticalAlignment="Bottom"/>

        <Grid x:Name="formulier" Grid.Row="1" Margin="3,0,-3,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Naam*:" FontSize="30" Grid.Column="1" Grid.Row="1" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <TextBox x:Name="NameField" Grid.Row="1" Grid.Column="2" Margin="30" FontSize="20" VerticalContentAlignment="Center" Padding="10, 0, 0, 0" />
            <TextBlock Text="EC*:" FontSize="30" Grid.Column="1" Grid.Row="2" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <TextBox  x:Name="ECField" Grid.Row="2" Grid.Column="2" Margin="30" PreviewTextInput="NumberValidationTextBox" FontSize="20" Padding="10, 0, 0, 0" VerticalContentAlignment="Bottom"/>
            <TextBlock Text="Semester:" FontSize="30" Grid.Column="1" Grid.Row="3" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <ComboBox x:Name="Semesters" Grid.Row="3" Grid.Column="2" Margin="30" FontSize="20" HorizontalAlignment="Center" Width="350" VerticalContentAlignment="Center"/>
            <Button Grid.Row="4" Grid.Column="2" Margin="35" Content="Toevoegen" FontSize="25" FontWeight="Bold" Click="AddSemesterButtonClick"/>
        </Grid>
    </Grid>
</Page>
